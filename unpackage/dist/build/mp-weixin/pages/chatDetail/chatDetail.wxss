:root,page,body,html,#app,.uni-app{--themeColor: #1ABDF2;--primary-accent: #1ABDF2;--globalcolor: #1a1b1c;--focusColor: #4c4d4e;--descColor: #7e8081;--greyColor: #8e8e8e;--subColor: #b1b2b3;--lightColor: #e4e4e4;--globalBgColor1: #e3e4e5;--globalBgColor2: #f6f7f8;--globalBgColor3: #ffffff;--bg-light: #f7f8fa;--blue-accent: #3978F7;--text-main: #333333;--text-sub: #666666;--line-gray: #E5E5E5;--bg-white: #FFFFFF}page{height:100%}.chat-container{position:relative;height:100vh;background-color:#f5f5f5;box-sizing:border-box;overflow:hidden}.message-scroll-view{box-sizing:border-box;padding-bottom:20rpx}.loading-more{text-align:center;color:#999;font-size:24rpx;padding:20rpx 0}.message-item{display:flex;margin:20rpx 30rpx 40rpx;align-items:flex-start}.message-item.mine{flex-direction:row-reverse}.message-item.mine .msg-content{align-items:flex-end}.message-item.mine .bubble{background:#fff}.message-item.system-message{flex-direction:column;align-items:center;justify-content:center;margin:30rpx 30rpx 50rpx}.message-item.system-message .avatar{display:none}.message-item.system-message .system-icon{width:80rpx;height:80rpx;margin-bottom:20rpx;filter:brightness(1.2)}.message-item.system-message .bubble{background:#fff8f2;color:#e65100;text-align:center;padding:28rpx 40rpx;border-radius:16rpx;font-size:34rpx;font-weight:500;box-shadow:0 6rpx 24rpx rgba(230,81,0,.12);border:1px solid rgba(230,81,0,.1);max-width:90%;line-height:1.5;transition:all .3s ease}.message-item.appointment_created .bubble{background:#e6f7ff;color:#007aff;border:1px solid #91D5FF}.message-item.appointment_cancelled .bubble{background:#fff1f0;color:#d71100;border:1px solid #FFA39E}.time{font-size:20rpx;color:#999;margin-top:12rpx;text-align:right}.avatar{width:80rpx;height:80rpx;border-radius:12rpx;margin:0 20rpx;flex-shrink:0;background-color:#eee}.msg-content{display:flex;flex-direction:column;max-width:calc(100% - 180rpx)}.bubble{background:#fff;padding:20rpx 24rpx;border-radius:16rpx;font-size:30rpx;line-height:1.5;word-break:break-all;box-shadow:0 2rpx 8rpx rgba(0,0,0,.05)}.msg-image{max-width:450rpx;max-height:400rpx;border-radius:12rpx;display:block}.location-msg{width:480rpx;border-radius:8rpx;overflow:hidden}.location-msg .map-thumb{width:100%;height:280rpx;display:block}.location-msg .map-info{padding:15rpx 20rpx;background-color:#fff}.location-msg .map-title{font-size:28rpx;font-weight:700;color:#333;display:block;white-space:nowrap;overflow:hidden;text-overflow:ellipsis;margin-bottom:8rpx}.location-msg .map-address{font-size:24rpx;color:#777;display:block;white-space:nowrap;overflow:hidden;text-overflow:ellipsis}.revoked-text{font-size:24rpx;color:#999}.input-bar{position:fixed;left:0;right:0;display:flex;align-items:center;padding:15rpx 20rpx;padding-bottom:calc(15rpx + env(safe-area-inset-bottom));background:#f8f8f8;border-top:1rpx solid #e0e0e0;transition:bottom .2s ease-out;z-index:100;box-sizing:border-box}.input-bar .icon-btn{width:56rpx;height:56rpx;margin:0 10rpx;flex-shrink:0}.input-bar .input{flex:1;height:76rpx;padding:0 28rpx;background:#fff;border-radius:40rpx;font-size:28rpx}.input-bar .send-btn{height:72rpx;padding:0 36rpx;line-height:72rpx;background:#000;color:#fff;border-radius:40rpx;font-size:28rpx;margin-left:10rpx;flex-shrink:0}
