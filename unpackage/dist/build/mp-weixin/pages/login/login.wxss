:root,page,body,html,#app,.uni-app{--themeColor: #1ABDF2;--primary-accent: #1ABDF2;--globalcolor: #1a1b1c;--focusColor: #4c4d4e;--descColor: #7e8081;--greyColor: #8e8e8e;--subColor: #b1b2b3;--lightColor: #e4e4e4;--globalBgColor1: #e3e4e5;--globalBgColor2: #f6f7f8;--globalBgColor3: #ffffff;--bg-light: #f7f8fa;--blue-accent: #3978F7;--text-main: #333333;--text-sub: #666666;--line-gray: #E5E5E5;--bg-white: #FFFFFF}.login-page{background-color:#f4f4f8;min-height:100vh;width:100%}.page-header{padding:100rpx 30rpx 20rpx;display:flex;align-items:center;position:relative;justify-content:center}.page-header .back-btn{position:absolute;left:30rpx;top:50%;transform:translateY(25%)}.page-header .header-title{font-size:34rpx;font-weight:600;color:#1c1c1e}.content-area{padding:80rpx 40rpx}.login-toggle{display:flex;background-color:#e9e9eb;border-radius:16rpx;padding:6rpx;margin-bottom:50rpx}.login-toggle .toggle-option{flex:1;padding:18rpx 0;text-align:center;font-size:30rpx;font-weight:500;color:#8a8a8e;border-radius:12rpx;transition:all .3s ease}.login-toggle .toggle-option.active{background-color:#fff;color:#007aff;box-shadow:0 2px 4px rgba(0,0,0,.05)}.form-card{background-color:#fff;border-radius:24rpx;padding:20rpx 40rpx 50rpx;box-shadow:0 8rpx 32rpx rgba(0,0,0,.05)}.input-row{display:flex;align-items:center;padding:20rpx 0;border-bottom:1px solid #e5e5ea;transition:border-color .3s ease}.input-row:focus-within{border-bottom-color:#007aff}.input-row .uni-icons{margin-right:20rpx}.input-field{flex:1;font-size:32rpx;color:#1c1c1e;height:60rpx;line-height:60rpx;background:none;border:none;outline:none}.input-field::-webkit-input-placeholder{color:#c7c7cc}.input-field::placeholder{color:#c7c7cc}.code-btn{font-size:28rpx;font-weight:500;color:#007aff;padding:0 10rpx;margin:0;background:none;border-radius:10rpx}.code-btn:after{border:none}.code-btn[disabled]{color:#8a8a8e;background:none}.confirm-btn{width:100%;height:96rpx;line-height:96rpx;margin-top:60rpx;background-color:#007aff;color:#fff;font-size:34rpx;font-weight:500;border-radius:48rpx;border:none}.confirm-btn:after{border:none}.terms-agreement{text-align:center;margin-top:60rpx;font-size:26rpx;color:#8a8a8e}.terms-agreement .link-text{display:inline;color:#007aff;text-decoration:none}
