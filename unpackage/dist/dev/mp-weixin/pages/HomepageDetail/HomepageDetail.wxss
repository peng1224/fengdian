/* 原始 wxss 样式 */
.worker-detail {
  background: #f8f8f8;
  font-size: 28rpx;
  padding-bottom: 40rpx;
  /* 新增伪元素来绘制圆润短蓝条 */
}
.worker-detail .banner-swiper {
  width: 100%;
  height: 400rpx;
}
.worker-detail .banner-img {
  width: 100%;
  height: 100%;
}
.worker-detail .basic-info {
  display: flex;
  padding: 24rpx;
  background: #fff;
  position: relative;
  align-items: center;
}
.worker-detail .basic-info .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}
.worker-detail .basic-info .info-text {
  flex: 1;
}
.worker-detail .basic-info .info-text .name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}
.worker-detail .basic-info .info-text .tags,
.worker-detail .basic-info .info-text .area {
  color: #888;
  font-size: 26rpx;
  margin-bottom: 8rpx;
}
.worker-detail .basic-info .like-container {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(255, 255, 255, 0.9);
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
}
.worker-detail .basic-info .like-container .like-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.worker-detail .basic-info .like-container .like-count {
  font-size: 28rpx;
  color: #333;
}
.worker-detail .section-title {
  position: relative;
  padding: 20rpx 20rpx 20rpx 20rpx;
  /* 左侧留出伪元素空间 */
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin: 20rpx 0 0 20rpx;
  background: #fff;
}
.worker-detail .section-title::before {
  content: "";
  position: absolute;
  left: 0rpx;
  /* 与整体 left margin 对齐 */
  top: 50%;
  /* 垂直居中 */
  transform: translateY(-50%);
  width: 8rpx;
  /* 蓝条宽度 */
  height: 40rpx;
  /* 蓝条高度 */
  background: #007aff;
  border-radius: 4rpx;
  /* 圆润效果 */
}
.worker-detail .service-section,
.worker-detail .desc-section,
.worker-detail .comment-section,
.worker-detail .media-section {
  background: #fff;
  margin-top: 20rpx;
  padding: 20rpx;
}
.worker-detail .service-section .tag-list {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 0 20rpx;
}
.worker-detail .service-section .tag-list .skill-tag {
  background: #f0f0f0;
  color: #555;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  margin-right: 12rpx;
  margin-top: 12rpx;
  font-size: 26rpx;
}
.worker-detail .service-section .price {
  padding-top: 10rpx;
  color: #e64a19;
  font-weight: bold;
}
.worker-detail .desc-section .desc-text {
  display: block;
  padding-top: 20rpx;
  font-size: 28rpx;
  line-height: 1.8;
  color: #444;
}
.worker-detail .contact-section {
  margin: 40rpx 20rpx;
  display: flex;
  gap: 20rpx;
  justify-content: space-between;
}
.worker-detail .contact-section .call-btn,
.worker-detail .contact-section .start-chat-btn,
.worker-detail .contact-section .appointment-btn {
  background: linear-gradient(135deg, #007aff, #4db8ff);
  color: #fff;
  border-radius: 20rpx;
  font-size: 30rpx;
  height: 88rpx;
  line-height: 88rpx;
  flex: 1;
  margin: 0;
  padding: 0;
  border: none;
}
.worker-detail .contact-section .call-btn::after,
.worker-detail .contact-section .start-chat-btn::after,
.worker-detail .contact-section .appointment-btn::after {
  border: none;
}
.worker-detail .contact-section .call-btn:active,
.worker-detail .contact-section .start-chat-btn:active,
.worker-detail .contact-section .appointment-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}
.worker-detail .media-section .media-item {
  margin-bottom: 20rpx;
}
.worker-detail .media-section .media-item:last-child {
  margin-bottom: 0;
}
.worker-detail .media-section .media-item .media-img,
.worker-detail .media-section .media-item .media-video {
  width: 100%;
  border-radius: 10rpx;
}
.comment-rating {
  margin-top: 10rpx;
  margin-left: 76rpx;
  display: flex;
}
.star {
  font-size: 32rpx;
  color: #ccc;
}
.star.active {
  color: #ffc107;
}
.comment-images {
  margin-top: 10rpx;
  padding-left: 76rpx;
  display: flex;
  flex-wrap: wrap;
}
.comment-img {
  width: 120rpx;
  height: 120rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  border-radius: 10rpx;
}
.skeleton .skeleton-title {
  height: 32rpx;
  background-color: #f2f3f5;
  margin-bottom: 20rpx;
  width: 40%;
}
.skeleton .skeleton-row {
  height: 28rpx;
  background-color: #f2f3f5;
  margin-top: 15rpx;
}
.comment-section .comment-item {
  margin-top: 24rpx;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 16rpx;
}
.comment-section .comment-item:last-child {
  border-bottom: none;
}
.comment-section .comment-item .comment-header {
  display: flex;
  align-items: center;
}
.comment-section .comment-item .comment-header .comment-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}
.comment-section .comment-item .comment-header .comment-info .comment-name {
  font-weight: bold;
  font-size: 28rpx;
}
.comment-section .comment-item .comment-header .comment-info .comment-date {
  font-size: 24rpx;
  color: #999;
}
.comment-section .comment-item .comment-content {
  margin-top: 16rpx;
  padding-left: 76rpx;
  font-size: 30rpx;
  color: #444;
}
.comment-section .comment-item .comment-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 16rpx;
  padding-right: 10rpx;
}
.comment-section .comment-item .comment-actions .reply-btn {
  font-size: 24rpx;
  color: #007aff;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  background-color: #f0f5ff;
}
.comment-section .comment-item .replies-wrapper {
  margin-top: 20rpx;
  margin-left: 76rpx;
  padding: 20rpx;
  background-color: #f7f7f7;
  border-radius: 10rpx;
}
.comment-section .comment-item .replies-wrapper .reply-list .reply-item {
  display: flex;
  margin-bottom: 16rpx;
}
.comment-section .comment-item .replies-wrapper .reply-list .reply-item:last-child {
  margin-bottom: 0;
}
.comment-section .comment-item .replies-wrapper .reply-list .reply-item .reply-avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  flex-shrink: 0;
}
.comment-section .comment-item .replies-wrapper .reply-list .reply-item .reply-content {
  flex: 1;
}
.comment-section .comment-item .replies-wrapper .reply-list .reply-item .reply-content .reply-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}
.comment-section .comment-item .replies-wrapper .reply-list .reply-item .reply-content .reply-header .reply-name {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
  /* 增加姓名和日期间距 */
}
.comment-section .comment-item .replies-wrapper .reply-list .reply-item .reply-content .reply-header .reply-date {
  font-size: 24rpx;
  color: #999;
  margin-left: auto;
  /* 日期靠右对齐 */
}
.comment-section .comment-item .replies-wrapper .reply-list .reply-item .reply-content .reply-text {
  font-size: 26rpx;
  color: #555;
  word-break: break-all;
}
.comment-section .comment-item .replies-wrapper .toggle-replies {
  font-size: 26rpx;
  color: #007aff;
  padding-top: 10rpx;
  margin-top: 10rpx;
  border-top: 1rpx solid #eee;
}
.comment-section .comment-item .reply-input-area {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  margin-left: 76rpx;
}
.comment-section .comment-item .reply-input-area .reply-input {
  flex: 1;
  background-color: #f2f2f2;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  padding: 0 20rpx;
  border-radius: 30rpx;
}
.comment-section .comment-item .reply-input-area .reply-submit-btn {
  margin-left: 20rpx;
  background-color: #007aff;
  color: #fff;
}
.comment-section .toggle-more {
  text-align: center;
  font-size: 28rpx;
  color: #007aff;
  padding: 24rpx 0 10rpx;
}
.reply-header {
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}
.reply-date {
  font-size: 24rpx;
  color: #999;
}