
/* Base container */
.homepage-container.data-v-d71a3e1b {
  background: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
  overflow-x: hidden;
}
.section-title.data-v-d71a3e1b {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  padding: 24rpx;
  border-bottom: 1rpx solid #eee;
}

/* 骨架屏样式 */
.skeleton-title.data-v-d71a3e1b {
  width: 60%;
  height: 40rpx;
  margin: 0 auto 20rpx;
  background: #eee;
  border-radius: 8rpx;
}
.skeleton-row.data-v-d71a3e1b {
  width: 100%;
  height: 32rpx;
  margin-bottom: 16rpx;
  background: #eee;
  border-radius: 6rpx;
}

/* Input section */
.input-section.data-v-d71a3e1b {
  background: #fff;
  margin: 24rpx 0;
  padding: 0 30rpx 24rpx;
}
.common-input.data-v-d71a3e1b {
  width: calc(100% - 48rpx);
  height: 88rpx;
  padding: 0 25rpx;
  margin: 0 auto;
  background: #f8f8f8;
  border: 2rpx solid #eee;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #333;
  display: block;
  transition: all 0.2s ease;
}
.common-input.data-v-d71a3e1b:focus {
  border-color: #FFA500;
  box-shadow: 0 4rpx 12rpx rgba(255, 165, 0, 0.1);
}
.common-input.data-v-d71a3e1b::-webkit-input-placeholder {
  color: #c0c0c0;
  font-size: 28rpx;
}
.common-input.data-v-d71a3e1b::placeholder {
  color: #c0c0c0;
  font-size: 28rpx;
}
.common-textarea.data-v-d71a3e1b {
  width: calc(100% - 48rpx);
  height: 240rpx;
  padding: 28rpx 25rpx;
  margin: 0 auto;
  background: #f8f8f8;
  border: 2rpx solid #eee;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
  display: block;
}
.common-textarea.data-v-d71a3e1b:focus {
  border-color: #FFA500;
  box-shadow: 0 4rpx 12rpx rgba(255, 165, 0, 0.1);
}
.common-textarea.data-v-d71a3e1b::-webkit-input-placeholder {
  color: #c0c0c0;
  font-size: 28rpx;
}
.common-textarea.data-v-d71a3e1b::placeholder {
  color: #c0c0c0;
  font-size: 28rpx;
}

/* Banner section */
.banner-swiper.data-v-d71a3e1b {
  height: 420rpx;
  background: #eee;
}
.empty-banner.data-v-d71a3e1b {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 28rpx;
}
.upload-banner-btn.data-v-d71a3e1b {
  margin: 24rpx;
  padding: 16rpx;
  background: #fff;
  border: 2rpx dashed #FFA500;
  border-radius: 8rpx;
  text-align: center;
}
.upload-banner-btn text.data-v-d71a3e1b {
  color: #FFA500;
  font-size: 28rpx;
}

/* Category section */
.category-section.data-v-d71a3e1b {
  background: #fff;
  margin: 24rpx 0;
}
.category-selector.data-v-d71a3e1b {
  padding: 0 24rpx 24rpx;
}
.picker-btn.data-v-d71a3e1b {
  background: #f8f8f8;
  padding: 16rpx;
  border-radius: 8rpx;
  text-align: center;
}
.picker-btn text.data-v-d71a3e1b {
  color: #FFA500;
}
.selected-categories.data-v-d71a3e1b {
  margin-bottom: 24rpx;
  margin-top: 24rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}
.placeholder-text.data-v-d71a3e1b {
  color: #999;
  font-size: 28rpx;
}

/* Basic info */
.basic-info.data-v-d71a3e1b {
  padding: 24rpx;
  background: #fff;
  display: flex;
  align-items: center;
}
.avatar.data-v-d71a3e1b {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}
.info-text.data-v-d71a3e1b {
  flex: 1;
}
.name.data-v-d71a3e1b {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}
.tags.data-v-d71a3e1b, .area.data-v-d71a3e1b {
  color: #666;
  font-size: 28rpx;
}
.tags.data-v-d71a3e1b::before, .area.data-v-d71a3e1b::before {
  content: '▶';
  color: #FFA500;
  margin-right: 8rpx;
  font-size: 24rpx;
}

/* Editable fields */
.editable-field.data-v-d71a3e1b {
  position: relative;
  display: inline-block;
  padding: 0 8rpx;
  border-radius: 8rpx;
}
.editable-field.data-v-d71a3e1b:active {
  background: #f0f0f0;
}
.editable-field.data-v-d71a3e1b::after {
  content: '✎';
  margin-left: 8rpx;
  font-size: 24rpx;
  color: #FFA500;
  opacity: 0.8;
}
.tags .editable-field.data-v-d71a3e1b {
  color: #FFA500;
}

/* Service section */
.service-section.data-v-d71a3e1b {
  background: #fff;
  margin: 24rpx 0;
}
.tag-list.data-v-d71a3e1b {
  padding: 24rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}
.empty-tips.data-v-d71a3e1b {
  width: 100%;
  color: #999;
  text-align: center;
  padding: 24rpx 0;
}
.tag-item.data-v-d71a3e1b {
  background: #f8f8f8;
  border-radius: 40rpx;
  padding: 12rpx 24rpx;
}
.skill-tag.data-v-d71a3e1b {
  color: #333;
  font-size: 28rpx;
}
.add-tag.data-v-d71a3e1b {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: #FFA500;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

/* Case section */
.case-section.data-v-d71a3e1b {
  background: #fff;
  margin: 24rpx 0;
}
.media-list.data-v-d71a3e1b {
  padding: 24rpx;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}
.media-item.data-v-d71a3e1b {
  aspect-ratio: 1;
  background: #f8f8f8;
  border-radius: 8rpx;
  overflow: hidden;
}
.media-item image.data-v-d71a3e1b,
.media-item video.data-v-d71a3e1b {
  width: 100%;
  height: 100%;
}
.media-list .add-tag.data-v-d71a3e1b {
  aspect-ratio: 1;
  background: #f8f8f8;
  border: 2rpx dashed #FFA500;
  color: #FFA500;
  font-size: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* Save button */
.save-btn.data-v-d71a3e1b {
  position: fixed;
  bottom: 40rpx;
  left: 30rpx;
  right: 30rpx;
  width: calc(100% - 60rpx);
  background: #FFA500;
  color: #fff;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
}

/* Input popup */
.input-mask.data-v-d71a3e1b {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}
.input-box.data-v-d71a3e1b {
  width: 80%;
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  z-index: 10000;
}
.tag-input.data-v-d71a3e1b {
  height: 88rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 0 24rpx;
  margin: 32rpx 0;
  color: #333;
}
.input-actions.data-v-d71a3e1b {
  display: flex;
  gap: 24rpx;
}
.action-btn.data-v-d71a3e1b {
  flex: 1;
  height: 80rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.action-btn.cancel.data-v-d71a3e1b {
  background: #f0f0f0;
  color: #666;
}
.action-btn.confirm.data-v-d71a3e1b {
  background: #FFA500;
  color: #fff;
}

/* Service area */
.service-area.data-v-d71a3e1b {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
}
.service-area text.data-v-d71a3e1b {
  color: #333;
}
.select-area-btn.data-v-d71a3e1b {
  background-color: #FFA500;
  color: #fff;
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
}
