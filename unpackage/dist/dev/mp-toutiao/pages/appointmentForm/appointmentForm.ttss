  transition: background-color 0.2s;
}
.location-selector.data-v-91af7e50:active {
  background-color: #f0f0f0;
}
.location-text-wrapper.data-v-91af7e50 {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.location-placeholder.data-v-91af7e50 {
  font-size: 28rpx;
  color: #999;
}
.location-name.data-v-91af7e50 {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 5rpx;
}
.location-address.data-v-91af7e50 {
  font-size: 24rpx;
  color: #666;
}
.detail-address-input.data-v-91af7e50 {
  width: 100%;
  height: 88rpx;
  border: 1px solid #e5e5e5;
  padding: 0 20rpx;
  border-radius: 12rpx;
