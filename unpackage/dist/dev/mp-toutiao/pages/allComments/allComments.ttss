/* 文章场景相关 */
.all-comments-page {
  background-color: #f8f8f8;
  min-height: 100vh;
  padding-bottom: 40rpx;
}
.technician-header {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}
.technician-header .header-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.technician-header .header-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.comment-list .loading-tip,
.comment-list .no-data-tip {
  text-align: center;
  color: #999;
  padding: 40rpx 0;
}
.load-more-tip {
  text-align: center;
  color: #999;
  font-size: 26rpx;
  padding: 20rpx 0;
}

/* 复用 HomepageDetail 的评论样式 */
.comment-item {
  background: #fff;
  margin-top: 20rpx;
  padding: 20rpx;
}
.comment-item .comment-header {
  display: flex;
  align-items: center;
}
.comment-item .comment-header .comment-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}
.comment-item .comment-header .comment-info .comment-name {
  font-weight: bold;
  font-size: 28rpx;
}
.comment-item .comment-header .comment-info .comment-date {
  font-size: 24rpx;
  color: #999;
}
.comment-item .comment-rating {
  margin-top: 10rpx;
  margin-left: 76rpx;
  display: flex;
}
.comment-item .comment-rating .star {
  font-size: 32rpx;
  color: #ccc;
}
.comment-item .comment-rating .star.active {
  color: #ffc107;
}
.comment-item .comment-content {
  margin-top: 16rpx;
  padding-left: 20rpx;
  font-size: 30rpx;
  color: #444;
}
.comment-item .comment-images {
  margin-top: 10rpx;
  padding-left: 20rpx;
  display: flex;
  flex-wrap: wrap;
}
.comment-item .comment-images .comment-img {
  width: 120rpx;
  height: 120rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  border-radius: 10rpx;
}
.comment-item .comment-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 16rpx;
}
.comment-item .comment-actions .reply-btn {
  font-size: 24rpx;
  color: #007aff;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  background-color: #f0f5ff;
}
.comment-item .replies-wrapper {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #f7f7f7;
  border-radius: 10rpx;
}
.comment-item .replies-wrapper .reply-list .reply-item {
  display: flex;
  margin-bottom: 16rpx;
}
.comment-item .replies-wrapper .reply-list .reply-item:last-child {
  margin-bottom: 0;
}
.comment-item .replies-wrapper .reply-list .reply-item .reply-avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  flex-shrink: 0;
}
.comment-item .replies-wrapper .reply-list .reply-item .reply-content {
  flex: 1;
}
.comment-item .replies-wrapper .reply-list .reply-item .reply-content .reply-name {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
}
.comment-item .replies-wrapper .reply-list .reply-item .reply-content .reply-text {
  font-size: 26rpx;
  color: #555;
  word-break: break-all;
}
.comment-item .replies-wrapper .toggle-replies {
  text-align: left;
  font-size: 26rpx;
  color: #007aff;
  padding-top: 10rpx;
  border-top: 1rpx solid #eee;
  margin-top: 10rpx;
}
.comment-item .reply-input-area {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}
.comment-item .reply-input-area .reply-input {
  flex: 1;
  background-color: #f2f2f2;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  padding: 0 20rpx;
  border-radius: 30rpx;
}
.comment-item .reply-input-area .reply-submit-btn {
  margin-left: 20rpx;
  background-color: #007aff;
  color: #fff;
}
.reply-header {
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}
.reply-date {
  font-size: 24rpx;
  color: #999;
}