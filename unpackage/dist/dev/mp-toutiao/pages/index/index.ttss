  --primary-accent: #007AFF;
  /* 黄色点缀 */
  --text-main: #333333;
  /* 主要文字 (深灰) */
  --text-sub: #666666;
  /* 次要文字 (中灰) */
  --line-gray: #E5E5E5;
  /* 分割线 (浅灰) */
  --bg-white: #FFFFFF;
  /* 白色 */
  --bg-light: #F7F8FA;
